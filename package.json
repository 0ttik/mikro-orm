{
  "name": "mikro-orm",
  "version": "2.0.0-alpha.13",
  "description": "Simple typescript ORM for node.js based on data-mapper, unit-of-work and identity-map patterns. Supports MongoDB, MySQL and SQLite databases.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/B4nan/mikro-orm.git"
  },
  "keywords": [
    "ORM",
    "mongo",
    "mongodb",
    "mysql",
    "sqlite",
    "ts",
    "typescript",
    "entity",
    "DDD",
    "mikro-orm",
    "unit-of-work",
    "data-mapper",
    "identity-map"
  ],
  "author": "Martin Ad√°mek",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/B4nan/mikro-orm/issues"
  },
  "homepage": "https://b4nan.github.io/mikro-orm/",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/tests/.*\\.(test|spec))\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "collectCoverage": false,
    "collectCoverageFrom": [
      "lib/**/*.ts"
    ]
  },
  "scripts": {
    "build": "tsc",
    "test": "jest --runInBand",
    "coverage": "rimraf temp && jest --runInBand --coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "codacy-coverage": "cat ./coverage/lcov.info | codacy-coverage",
    "lint": "tslint -c tslint.json -p tsconfig.json"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "clone": "^2.1.2",
    "fast-deep-equal": "^2.0.1",
    "lodash.merge": "^4.6.1",
    "node-request-context": "^1.0.5",
    "ts-morph": "^1.0.0",
    "typescript": "^3.3.3",
    "uuid": "^3.3.2"
  },
  "peerDependencies": {
    "mongodb": "^3.1.13",
    "mysql2": "^1.6.5",
    "sqlite": "^3.0.1"
  },
  "devDependencies": {
    "@types/clone": "^0.1.30",
    "@types/jest": "^24.0.1",
    "@types/lodash": "^4.14.120",
    "@types/mongodb": "^3.1.19",
    "@types/mysql2": "types/mysql2",
    "@types/node": "^11.9.0",
    "@types/uuid": "^3.4.4",
    "codacy-coverage": "^3.4.0",
    "coveralls": "^3.0.2",
    "jest": "^24.1.0",
    "mongodb": "^3.1.13",
    "mysql2": "^1.6.5",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.3",
    "sqlite": "^3.0.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1"
  }
}
