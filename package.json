{
  "name": "mikro-orm",
  "version": "1.0.1",
  "description": "Simple typescript mongo ORM for node.js based on data-mapper, unit-of-work and identity-map patterns",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/B4nan/mikro-orm.git"
  },
  "keywords": [
    "ORM",
    "mongo",
    "mongodb",
    "ts",
    "typescript",
    "entity",
    "DDD",
    "mikro-orm",
    "unit-of-work",
    "data-mapper",
    "identity-map"
  ],
  "author": "Martin Ad√°mek",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/B4nan/mikro-orm/issues"
  },
  "homepage": "https://github.com/B4nan/mikro-orm#readme",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/tests/.*\\.(test|spec))\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "lib/**/*.ts"
    ]
  },
  "scripts": {
    "build": "tsc",
    "precommit": "yarn lint",
    "test": "node node_modules/.bin/jest --runInBand",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "lint": "tslint -c tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "clone": "^2.1.2",
    "fast-deep-equal": "^2.0.1",
    "lodash.merge": "^4.6.1",
    "mongodb": "^3.1.6",
    "reflect-metadata": "^0.1.12",
    "ts-simple-ast": "^14.4.5",
    "typescript": "^3.0.3"
  },
  "devDependencies": {
    "@types/clone": "^0.1.30",
    "@types/jest": "^23.3.2",
    "@types/lodash": "^4.14.116",
    "@types/mongodb": "^3.1.7",
    "@types/node": "^10.9.4",
    "coveralls": "^3.0.2",
    "git-pre-commit": "^2.1.4",
    "jest": "^23.6.0",
    "mikro-config": "^1.3.1",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0"
  }
}
